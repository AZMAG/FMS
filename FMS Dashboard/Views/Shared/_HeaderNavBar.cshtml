@using FMS_Dashboard.Helpers

<nav class="navbar navbar-expand-lg navbar-light body-content">
    <a class="navbar-brand" href="#">
        <img src="~/Images/Logo.png" width="204" height="70" class="d-inline-block align-top" alt="">
    </a>
    <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarText" aria-controls="navbarText" aria-expanded="false" aria-label="Toggle navigation">
        <span class="navbar-toggler-icon"></span>
    </button>
    <div class="collapse navbar-collapse" id="navbarText">
        <ul class="nav navbar-nav mr-auto">
            <li class="@Html.IsSelected(actions: "Index", controllers: "Home") nav-item">@Html.ActionLink("Home", "Index", "Home", null, new { @class = "nav-link" })</li>
            <li class="@Html.IsSelected(actions: "Index", controllers: "Corridors") nav-item">@Html.ActionLink("Corridors", "Index", "Corridors", null, new { @class = "nav-link" })</li>
            <li class="@Html.IsSelected(actions: "Index", controllers: "QueryBuilder") nav-item">
                @Html.ActionLink("Query Builder", "Index", "QueryBuilder", null, new { @class = "nav-link" })
            </li>
            @if (HttpContext.Current.User.IsInRole("Admin"))
            {
                <li class="@Html.IsSelected(actions: "Index", controllers: "Admin") nav-item">
                    @Html.ActionLink("Admin", "Index", "Admin", null, new { @class = "nav-link" })
                </li>
            }
        </ul>
        <hr />
        <span class="navbar-text">
            Hello, @User.Identity.Name!
        </span>
    </div>
</nav>